<div id="<%= @id %>" class="star">
  <div class="star-name">(ID:<%= @id %>)</div>
  <div class="star-security">Security: </div>
  <div class="star-constellation">Constellation: </div>
  <div class="star-region">Region: </div>
</div>

<div id="add-moon"></div>
<table id="star-moons" class="table table-condensed table-striped">
  <tr>
    <th>Moon Name</th>
    <th colspan="4">Minerals</th>
  <tr>
  
  <% @moons.each do |moon| %>
    <tr>
      <td><%= link_to "#{moon.name}", moon %></td>
      <% moon.minerals.each do |mineral| %>
        <td class="mineral"><%= mineral.type_id %></td>
      <% end %>
    </tr>
  <% end %>
</table>
