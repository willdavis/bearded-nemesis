<h1>Listing minerals</h1>

<table class="table table-condensed table-hover table-striped">
  <tr>
    <th>Type</th>
    <th>Name</th>
    <th></th>
  </tr>

<% @minerals.each do |mineral| %>
  <tr>
    <td><%= mineral.type_id %></td>
    <td><%= link_to "#{mineral.name}", mineral %></td>
    <td><%= link_to 'Show', mineral %></td>
  </tr>
<% end %>
</table>
