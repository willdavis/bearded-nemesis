<%= form_for @moon, :url => moons_path, :as => :moon do |f| %>
  <% if @moon.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@moon.errors.count, "error") %> prohibited this moon from being saved:</h2>

      <ul>
      <% @moon.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :location_name %><br />
    <%= f.text_field :location_name, :autocomplete => :off, :placeholder => "solar system name", :data => { :provide =>"typeahead" } %>
  </div>
  <div class="field">
    <%= f.label :moon_name %><br />
    <%= f.text_field :moon_name, :autocomplete => :off, :placeholder => "moon name", :data => { :provide =>"typeahead" } %>
  </div>
  <div class="field">
    <%= f.label :mineral_1 %><br />
    <%= f.text_field :mineral_name_1 %>
  </div>
  <div class="field">
    <%= f.label :mineral_2 %><br />
    <%= f.text_field :mineral_name_2 %>
  </div>
  <div class="field">
    <%= f.label :mineral_3 %><br />
    <%= f.text_field :mineral_name_3 %>
  </div>
  <div class="field">
    <%= f.label :mineral_4 %><br />
    <%= f.text_field :mineral_name_4 %>
  </div>
  
  <%= f.hidden_field :celestial_id %>
  <%= f.hidden_field :location_id %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
