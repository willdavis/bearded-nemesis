<div id="moon-info">
  <div id="moon-name"><b><%= @moon.name %></b> (ID:<%= @moon.celestial_id %>)</div>
  <div id="moon-location">Location: <span id="<%= @moon.location_id %>"><%= link_to "#{@moon.location_id}", solar_system_path(@moon.location_id) %></span></div>
  <div id="moon-submitter">Submitted by: <%= @moon.created_by.name %> on <%= @moon.created_at %></div>
  <div id="moon-updater">Updated by: <%= @moon.updated_by.name %> on <%= @moon.updated_at %></div>
</div>

<b>Minerals</b>
<div id="moon-minerals">
  <% @moon.minerals.each do |mineral| %>
    <div><%= link_to "#{mineral.name}", mineral %></div>
  <% end %>
</div>

<br />
<%= link_to 'Back', moons_path, :class => "btn" %> | 
<%= link_to 'Edit', edit_moon_path(@moon), :class => "btn" %> | 
<%= link_to 'Destroy', @moon, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
